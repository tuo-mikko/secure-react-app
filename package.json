{
  "name": "secure-react-app",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/frontend"
  ],
  "scripts": {
    "bootstrap": "npm install",
    "start:backend":  "npm --workspace packages/backend run dev",
    "start:frontend": "npm --workspace packages/frontend run start",
    "start": "npm-run-all --parallel start:backend start:frontend"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "npm-run-all": "^4.1.5"
  }
}
